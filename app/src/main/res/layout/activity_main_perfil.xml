<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="20dp"
    android:layout_marginLeft="20dp"
    android:layout_marginEnd="20dp"
    android:layout_marginRight="20dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView_data"
        android:layout_width="368dp"
        android:layout_height="444dp"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView_name">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/meus_matchs"
                android:layout_width="341dp"
                android:layout_height="29dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:text="Meus Match's"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/gift_card"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/dados_pessoais" />

            <TextView
                android:id="@+id/dados_pessoais"
                android:layout_width="341dp"
                android:layout_height="29dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="8dp"
                android:text="Dados Pessoais"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/meus_matchs"
                app:layout_constraintEnd_toEndOf="@id/meus_matchs"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/sair"
                android:layout_width="331dp"
                android:layout_height="35dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="24dp"
                android:text="Sair"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/Contato"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/Contato"
                android:layout_width="341dp"
                android:layout_height="29dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="8dp"
                android:text="Contato"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/sair"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/gift_card" />

            <TextView
                android:id="@+id/gift_card"
                android:layout_width="341dp"
                android:layout_height="29dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="8dp"
                android:text="Gift Card"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/Contato"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/meus_matchs" />

            <ImageButton
                android:id="@+id/btn_dados_pessoais"
                android:layout_width="34dp"
                android:layout_height="29dp"
                android:layout_marginEnd="24dp"
                android:background="#00FFFFFF"
                android:onClick="btn_cadastro"
                app:layout_constraintEnd_toEndOf="parent"
                app:srcCompat="@drawable/ic_launcher_seta_foreground"
                tools:ignore="MissingConstraints,VectorDrawableCompat"
                tools:layout_editor_absoluteY="54dp" />

            <ImageButton
                android:id="@+id/btn_gift_card"
                android:layout_width="34dp"
                android:layout_height="29dp"
                android:layout_marginEnd="24dp"
                android:background="#00FFFFFF"
                android:onClick="btn_cadastro"
                app:layout_constraintEnd_toEndOf="parent"
                app:srcCompat="@drawable/ic_launcher_seta_foreground"
                tools:ignore="MissingConstraints,VectorDrawableCompat"
                tools:layout_editor_absoluteY="205dp" />

            <ImageButton
                android:id="@+id/btn_contato"
                android:layout_width="34dp"
                android:layout_height="29dp"
                android:layout_marginEnd="24dp"
                android:background="#00FFFFFF"
                android:onClick="btn_cadastro"
                app:layout_constraintEnd_toEndOf="parent"
                app:srcCompat="@drawable/ic_launcher_seta_foreground"
                tools:ignore="MissingConstraints,VectorDrawableCompat"
                tools:layout_editor_absoluteY="280dp" />

            <ImageButton
                android:id="@+id/btn_meus_matches"
                android:layout_width="34dp"
                android:layout_height="29dp"
                android:layout_marginEnd="24dp"
                android:background="#00FFFFFF"
                android:onClick="btn_cadastro"
                app:layout_constraintEnd_toEndOf="parent"
                app:srcCompat="@drawable/ic_launcher_seta_foreground"
                tools:ignore="MissingConstraints,VectorDrawableCompat"
                tools:layout_editor_absoluteY="130dp" />

            <ImageButton
                android:id="@+id/btn_sair"
                android:layout_width="72dp"
                android:layout_height="66dp"
                android:layout_marginEnd="4dp"
                android:background="#00FFFFFF"
                android:scaleType="centerInside"
                app:layout_constraintEnd_toEndOf="parent"
                app:srcCompat="@drawable/ic_launcher_sair_foreground"
                tools:layout_editor_absoluteY="342dp"
                tools:ignore="MissingConstraints,VectorDrawableCompat" />

            <FrameLayout
                android:id="@+id/fragment_dados_pessoais"
                android:layout_width="268dp"
                android:layout_height="452dp"
                app:layout_constraintStart_toEndOf="@+id/btn_dados_pessoais"
                tools:layout_editor_absoluteY="-1dp"
                tools:ignore="MissingConstraints" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView_name"
        android:layout_width="364dp"
        android:layout_height="92dp"
        android:layout_marginTop="40dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.285"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/text_view_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="48dp"
                android:text="Daiana Souza"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.121"
                app:layout_constraintStart_toEndOf="@+id/imageView_profile"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="MissingConstraints" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imageView_profile"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginStart="8dp"
                android:src="@drawable/img_profile"
                app:civ_border_color="#ff000000"
                app:civ_border_width="2dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/btn_voltar"
        android:layout_width="38dp"
        android:layout_height="41dp"
        android:background="@drawable/ic_baseline_arrow_back_24"
        app:backgroundTint="#FFFFFF"
        app:iconTint="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.01"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>